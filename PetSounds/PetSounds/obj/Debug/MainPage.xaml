<Page
    x:Class="PetSounds.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PetSounds"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Gold">
        <TextBlock FontSize="30" 
                   HorizontalAlignment="Left" 
                   Margin="10,0,0,0" 
                   TextWrapping="Wrap" 
                   Text="Niyati's First App"
                   VerticalAlignment="Top" 
                   Height="104" Width="362"
                   FontFamily="Comic Sans MS"
                   Foreground="Green"
                   FontWeight="ExtraBold"/>
        <TextBlock Text="Relive your childhood by listening these sounds.!!"
                   HorizontalAlignment="Left" 
                   FontSize="18"
                   Foreground="Blue"
                   Margin="10,70,0,0" ></TextBlock>
       
            <TextBlock x:Name="LatitudeTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="LongitudeTextBlock"/>
            <TextBlock x:Name="StatusTextBlock"/>
            <Button x:ConnectionId='1' x:Name="OneShotLocationButton"                               Content="get one-shot location" Margin="103,490,0,93"/>
        

        <MediaElement x:Name="quackElement" Source="/Assets/duck-quack1.wav" Volume="1" AutoPlay="False"/>
        <MediaElement x:Name="catElement" Source="/Assets/cat-fight.wav" Volume="1" AutoPlay="False"/>
        <MediaElement x:Name="tigerElement" Source="/Assets/tiger-roar2.wav" Volume="1" AutoPlay="False"/>
    </Grid>
</Page>

